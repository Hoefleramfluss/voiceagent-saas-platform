# Environment Variables
# Copy this file to .env and fill in your values

# ===================================
# REQUIRED VARIABLES
# ===================================

# PostgreSQL database connection string
# Example: postgresql://user:password@host:port/database
DATABASE_URL=

# Stripe secret API key
# Example: sk_test_... or sk_live_...
STRIPE_SECRET_KEY=

# Stripe webhook signing secret
# Example: whsec_...
STRIPE_WEBHOOK_SECRET=

# Node environment
# Example: production
NODE_ENV=production

# Session encryption secret (min 32 chars)
# Generate with: openssl rand -base64 32
# Example: your-super-secret-session-key-min-32-chars
SESSION_SECRET=

# ===================================
# OPTIONAL VARIABLES
# ===================================

# Stripe publishable API key
# Example: pk_test_... or pk_live_...
# STRIPE_PUBLISHABLE_KEY=

# Application port
# Example: 5000
# PORT=

# Frontend application URL
# Example: https://yourdomain.com
# FRONTEND_URL=

# Twilio Account SID (for phone integration)
# Example: ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_ACCOUNT_SID=

# Twilio Auth Token
# Example: your_twilio_auth_token
# TWILIO_AUTH_TOKEN=

# Twilio phone number in E.164 format
# Example: +1234567890
# TWILIO_PHONE_NUMBER=

# SendGrid API key for email delivery
# Example: SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# SENDGRID_API_KEY=

# Allowed CORS origins (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# UI platform (booking backend)
# Example: https://ui-platform.example.com
UI_PLATFORM_URL=
# Optional bearer token for UI platform
# UI_PLATFORM_TOKEN=

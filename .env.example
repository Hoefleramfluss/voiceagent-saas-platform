# VoiceAgent SaaS Platform - Environment Variables
# Copy to .env and fill with your values

# === Core Application ===
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
DATABASE_URL=postgresql://user:password@host:port/database

# === Authentication & Sessions ===
SESSION_SECRET=your-session-secret
TENANT_SECRETS_MASTER_KEY=your-master-encryption-key
API_KEY_MASTER_KEY=your-api-encryption-key

# === Retell AI (Global Account) ===
# Single account for all customers, agent IDs are tenant-scoped
RETELL_PUBLIC_KEY=your-retell-public-key
RETELL_SECRET_KEY=your-retell-secret-key

# === Stripe (Global Account) ===  
STRIPE_SECRET_KEY=sk_test_or_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_or_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === SendGrid ===
SENDGRID_API_KEY=your-sendgrid-key

# === Twilio ===
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com

# === Google Services ===
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# === HubSpot ===
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret

# === Pipedrive ===
PIPEDRIVE_CLIENT_ID=your-pipedrive-client-id
PIPEDRIVE_CLIENT_SECRET=your-pipedrive-client-secret

# === ElevenLabs ===
ELEVENLABS_API_KEY=your-elevenlabs-key

# === Heroku ===
HEROKU_API_KEY=your-heroku-key

# === Frontend ===
FRONTEND_URL=https://voiceagent-worktask.replit.app

# === Security (Optional) ===
# ADMIN_ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# === Replit Integration ===
REPLIT_DOMAINS=your-repl-domain.replit.dev
SENDGRID_FROM_EMAIL=billing@deine-domain.tld
RETELL_API_KEY=retell_xxx
